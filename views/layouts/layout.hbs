<script>

    function toggleUsedColumn(_env) {
        var elems = document.getElementsByClassName('customColumn');
        var btnText = document.getElementById('usedCountBtn');
        var val = false;
        if (elems[0].hidden == true) {
            val = false;
            btnText.innerText = "Hide Used Count";
        }
        else {
            btnText.innerText = "Show Used Count";
            val = true;
        }
        for (var i = 0; i < elems.length; i++) {
            elems[i].hidden = val;
        }
    }

</script>